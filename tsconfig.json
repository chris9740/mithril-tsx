{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es2022",
        "target": "ES6",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "plugins": [{ "name": "typescript-plugin-css-modules" }],
        "jsx": "preserve",
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "types": ["node"],
    },
    "include": ["./src/**/*"]
}
